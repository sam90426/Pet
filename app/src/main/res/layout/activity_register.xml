<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:orientation="vertical"
    tools:context="com.sam.pet.AccountView.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/registerloginname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:background="@drawable/border"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="11位手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/registerpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginTop="15dp"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="6-12位数字或字母"
            android:maxLength="12"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/registernickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginTop="15dp"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="论坛昵称"
            android:maxLength="8"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/registercode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:windowSoftInputMode="adjustUnspecified|stateHidden"
                android:padding="15dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:layout_weight="3"
                android:hint="请输入右侧验证码"
                android:maxLength="4"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/registercodeimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight="4"/>
            <Button
                android:id="@+id/registercoderefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:gravity="center"
                android:text="刷"/>
        </LinearLayout>
        <Button
            android:id="@+id/registersubmitbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginTop="15dp"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:text="注     册"/>
    </LinearLayout>

</LinearLayout>
